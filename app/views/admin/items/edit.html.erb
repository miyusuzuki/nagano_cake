<div class="container">
<h5>商品編集</h5>
<div class="row">
<div class="col-xs-9">
<%= form_for @item, url: admin_item_path(@item) do |f| %>
    <div class="form-group has-icon">
      <%= f.label :image, "商品画像" %><br />
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :introduction, "商品説明" %>
      <%= f.text_area :introduction, class:"form-control" %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :genre_id, "ジャンル" %><br />
      <%= f.select :genre_id, [["ケーキ", "1"], ["キャンディ", "2"]], include_blank: "選択して下さい" %>
    </div>
    <div class="form-group has-icon">
      <%= f.label :non_taxed_price, "値段(税抜き)" %>
      <%= f.text_field :price, class:"form-control" %>
    </div>
    <div class="form-group has-icon">
      <%= f.radio_button :is_active, :true, checked: "checked"%>
       <%= f.label :sales_status, "販売中", {value: :"true", style: "display: inline-block;"} %>
       <%= f.radio_button :is_active, :false %>
       <%= f.label :sales_status, "販売停止中", {value: :"false", style: "display: inline-block;"} %>
    </div>
    <%= f.submit "変更を保存", class:"btn btn-primary" %>
<% end %>
</div>
</div>
</div>