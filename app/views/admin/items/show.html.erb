<div class="container">
	<div class="row">
	<div class="col-lg-3">
		<h3>商品詳細</h3>
	</div>
	</div>
	<div class="row">
	<div class="col-lg-offset-1 col-lg-4">
		<%= image_tag @item %>
	</div>
	<div class="col-lg-6">
	<dl class="dl-horizontal">
		<dt>商品名</dt><dd><%= @item.name %></dd><br>
		<dt>商品説明</dt><dd><%= @item.introduction %></dd><br>
		<dt>ジャンル</dt>
		 <dd>
		  <% genre = Genre.find(@item.genre_id) %>
		  <%= @genre.name %>
		 </dd><br>
		<dt>税込価格（税抜価格)</dt><dd><%= @item.add_tax_price.to_s(:dalimited) %>（<%= @item.price %>）円</dd><br>
		<dt>販売ステータス</dt>
		<%if @item.is_active == true %>
				<dd>販売中</dd>
		<% else %>
				<dd>販売停止中</dd>
		<% end %><br>
	</dl>
	</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-3 col-lg-9">
			<%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
		</div>
	</div>
</div>