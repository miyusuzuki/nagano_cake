<div class="container">
            <h5><%= @customer.name %>さんの会員情報</h5>
    <div class="row">
        <div class="col-lg-3">
            <table class="admin_show_customer">
                <tr class="active">
                    <th>会員ID</th>
                    <td><%= @customer.id %></tb>
                </th> 
               <tr>
                    <th>氏名</th>
                    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
                </tr>
                <tr>
                    <th>フリガナ</th>
                    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                    <th>郵便番号</th>
                    <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <th>住所</th>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <th>電話番号</th>
                    <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @customer.email %></td>
                </tr>
                <tr>
                  <th>会員ステータス</th>
                  <td>
                    <% if @customer.is_active == true %>
                    有効
                    <% else %>
                    退会
                    <% end %>
                  </td>
                </tr>
            </table>
        </div>
    </div>
      <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_url, class: "btn btn-primary" %>
</div> 