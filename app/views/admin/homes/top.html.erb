<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h5>注文履歴一覧</h5>
    </div>
  </div>
  <div class="row">
     <div class="col-lg-offset-1 col-lg-10">
       <table class="table">
            <thead>
                <tr class="active">
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
            <tbody>
              <% orders_url do |order| %>
  　　　        　　<tr>
                  <td><%= link_to order.created_at, admin_order_path(order) %></td>
                  <td><%= order.customers.name %></td>
                  <td><%= order.ordered_products.sum(:amount) %></td>
                  <td><%= order.status %></td>
                </tr>
　　　　　    <% end %>
            </tbody>
       </table>    
     </div>
  </div>
</div>



