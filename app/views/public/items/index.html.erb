<div class="container">
  <h5>商品一覧(全<%= @items.count %>件)</h5>
  <div class="border mb-4 mx-auto" style="width:10%"></div>
  <div class="row">


		<% @items.each do |item| %>
		<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="card mb-3">
			<%= link_to(item_path(item.id), class:"text-dark") do %>
			<%= image_tag item.image, size: "200x120" %><br>
			<% end %>
			<%= item.name %>
			¥<%= item.add_tax_price.to_s(:delimited) %>
    </div>
    </div>
		<% end %>
	</div>
	<div style="text-align: center;"><%= paginate @items %></div>
</div>