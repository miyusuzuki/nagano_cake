<div class="row">
	<div class="col-xs-5">
		<p class="item-content1"><%= image_tag @item.image, size:'300x200' %></p>
	</div>

	<div class="col-xs-5">
		<%= form_for(@cart_item , url: cart_items_path, method: :post) do |form| %>
		<h3><%= @item.name %></h3>
		<p><%= @item.introduction %></p>

	</div>
</div>

<div class="row">
	<div class="col-xs-2">
	</div>
	<div class="col-xs-5">

			<p class="item-content2", style="font-family: arial black">¥ <%= @item.add_tax_price.to_s(:delimited) %> (税込)
				<span>　　</span><%= form.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %></p>
		</div>

		<div class="col-xs-5">
		  <p><%= link_to "カートに入れる", cart_items_path, class:"btn btn-primary" %></p>
		</div>
		<% end %>
	</div>
</div>