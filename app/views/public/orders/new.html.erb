<div class="container">
	<div class="row">
		<div class="col-lg-4">
		<h3>注文情報入力</h3>
		</div>
	</div>

	<%= form_with(model: @order,url:orders_confirm_path , local: true ) do |f| %>
	<div class="row">
		<div class="col-lg-4">
			<div class="col-lg-5"><h4>支払方法</h4></div>
		    <div class="col-xs-offset-1 col-lg-8">
				<%= f.radio_button :method_of_payment_select, 0 %>
				<%= f.label :method_of_payment, :クレジットカード, { class:"pull-left" ,style: "padding-left: 5px;"}%>
			</div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.radio_button :method_of_payment_select, 1 %>
				<%= f.label :method_of_payment, :銀行振込 ,{ class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
			<div class="col-lg-5"><h4>お届け先</h4></div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.radio_button :address_select, 0 %>
				<%= f.label :address, "ご自身の住所",{ class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
			<div class="col-lg-12">
				<p>〒<%= current_customer.postal_code%> <%=current_customer.address %> <%=current_customer.name%></p>
			</div>
			<div class="col-xs-offset-1 col-lg-8">
				 <%= f.radio_button :address_select, 1 %>
				<%= f.label :address, "登録済住所から選択", { class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.collection_select(:address_id, @addresses, :id, :address) %>
			</div>
			<div class="col-xs-offset-1 col-lg-10">
				<%= f.radio_button :address_select, 2 %>
				<%= f.label :address, "新しいお届け先", { class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
					<div class="col-xs-offset-1 col-lg-3"><%= f.label :郵便番号 %></div>
					<div class="col-xs-offset-1 col-lg-9"><%= f.text_field :shipping_postal_code %></div>
					<div class="col-xs-offset-1 col-lg-3"><%= f.label :住所 %></div>
					<div class="col-xs-offset-1 col-lg-9"><%= f.text_field :shipping_address %></div>
					<div class="col-xs-offset-1 col-lg-3"><%= f.label :宛名 %></div>
					<div class="col-xs-offset-1 col-lg-9"><%= f.text_field :shipping_name %></div>
				<%= hidden_field_tag :page, "new" %><br>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-7">
			<%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
		</div>
	</div>
	<% end %>
</div>