<div class="container">
<div class="row">
	<div class="col-lg-4">
		<%= form_with model:@order, url: orders_confirm_path do |f|%>
		<h5>注文情報確認</h5>
	</div>
</div>
	<div class="col-lg-8">
		<table class="table table-bordered">
		<tr class="active">
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
		</tr>
		<% sum = 0 %>
		<% @cart_items.each do |cart_item| %>
		<tr>
			<td style="line-height: 50px;"><%= image_tag cart_item.item.image, size: "25x25" %><%= cart_item.item.name %></td>
			<td style="line-height: 50px;"><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
			<td style="line-height: 50px;"><%= cart_item.amount %></td>
			<td style="line-height: 50px;"><%= ((cart_item.item.add_tax_price * cart_item.amount).floor).to_s(:delimited, delimiter: ',') %></td>
			<% price = cart_item.item.add_tax_price * cart_item.amount %>
			<% sum += price %>
		</tr>
		<% end %>
		</table>
	</div>
	<div class="col-lg-4">
		<table class="table table-bordered">
		<tr><th class="active" style="line-height: 30px;">送料</th><td style="line-height: 30px;"><%= @postage %>円</td></tr>
		<% payment = sum + @postage %>
		<tr><th class="active" style="line-height: 30px;">合計金額</th><td style="line-height: 30px;"><%= sum %>円</td></tr>
		<tr><th class="active" style="line-height: 30px;">請求金額</th><td style="line-height: 30px;"><%= payment %>円</td></tr>
		</table>
	</div>
	<div class="col-lg-12"><h4 class="pull-left">支払方法</h4></div>
	<div class="col-lg-12"><p class="pull-left"><%= @method_of_payment %></p></div>
	<div class="col-lg-12"><h4 class="pull-left">お届け先</h4></div>
		<% address = ''%>
	<div class="col-lg-12"><p class="pull-left">〒
			<%= session[:user]["shipping_postal_code"] %>
    　<%= session[:user]["shipping_address"] %></p>
      <%= session[:user]["shipping_name"] %></p>
		</p></div>
			<%= f.hidden_field :customer_id , value: current_customer.id %>
			<%= f.hidden_field :postage , value: @postage %>
			<%= f.hidden_field :payment , value: payment %>
			<%= f.hidden_field :address, value: address %>
			<%= f.hidden_field :method_of_payment, value: params[:order][:method_of_payment] %>
			<%= f.submit '購入を確定する', class: 'btn btn-success btn-lg' %>
		<% end %>
</div>