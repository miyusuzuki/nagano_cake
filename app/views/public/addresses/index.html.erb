<div class="container">
  <h5>配送先一覧 / 登録</h5>

<%= form_for(@address) do |f| %>

  <div class="form-group has-icon"><br>
    電話番号(ハイフンなし) : <%= f.text_field :postal_code %>
  </div>
  <div class="form-group has-icon"><br>
    住所 : <%= f.text_field :address %>
  </div>
  <div class="form-group has-icon"><br>
    宛名 : <%= f.text_field :name %>
  </div>
           
  <%= f.submit "新規登録", class:"btn btn-success" %>
<% end %>

<table class="table-bordered table-striped">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
          <%= link_to "削除する", address_path(address), class: "btn btn-danger", method: :delete %></td>
      </tr>
    <% end %>
</tbody>
</table>
</div>